# Generic
SITE_NAME=CERN-PROD
BDII_HOST=lcg-bdii.cern.ch

VOS="ops"

VO_OPS_VOMS_SERVERS="vomss://voms.cern.ch:8443/voms/ops?/ops/"
VO_OPS_VOMSES="'ops lcg-voms.cern.ch 15009 /DC=ch/DC=cern/OU=computers/CN=lcg-voms.cern.ch ops 24' 'ops voms.cern.ch 15004 /DC=ch/DC=cern/OU=computers/CN=voms.cern.ch ops 24'"
VO_OPS_VOMS_CA_DN="'/DC=ch/DC=cern/CN=CERN Trusted Certification Authority' '/DC=ch/DC=cern/CN=CERN Trusted Certification Authority'"

# Nagios
NAGIOS_ADMIN_DNS=<COMMA_SEPARETED_LIST_OF_NAGIOS_DNs>
NAGIOS_ROLE="central-web"
NAGIOS_HTTPD_ENABLE_CONFIG=true

# Component configuration
MYEGI_ADMIN_NAME="Admin Name"
MYEGI_ADMIN_EMAIL=<ADMIN_MAIL>
MYEGI_DEFAULT_PROFILE="ROC"
MYEGI_ACE="True"

MYWLCG_DATA_TRANSFER="False"
MYWLCG_REPORTS="True"
MYWLCG_TOPOLOGY="True"
MYWLCG_ACCESS_CONTROL_ALLOW_ORIGIN="*"
MYWLCG_ACCESS_PERIOD="1"
MYWLCG_DATA_TRANSFER="False"
MYWLCG_DB_LIMIT="50000"
MYWLCG_EGI_EMAILS=<EGI_REPORT_GROUP_EMAIL>
MYWLCG_NUMBER_OF_ACCESSES="200"
MYWLCG_REPORTS="True"
MYWLCG_REPORT_AUTHENTIC_DNS=<SPACE_SEPARATED_LIST_OF_DNs> # list of DNs for people who can generate reports
MYWLCG_REPORT_EGI_PROFILES="ROC_CRITICAL"
MYWLCG_REPORT_VO_ALL_SITES_PROFILES="ALICE_CRITICAL ATLAS_CRITICAL CMS_CRITICAL LHCb_CRITICAL"
MYWLCG_REPORT_WLCG_TIER1_HISTORY_PROFILES="WLCG_CREAM_LCGCE_CRITICAL"
MYWLCG_REPORT_WLCG_TIER1_SUMMARY_PROFILES="WLCG_CREAM_LCGCE_CRITICAL ALICE_CRITICAL ATLAS_CRITICAL CMS_CRITICAL LHCb_CRITICAL"
MYWLCG_REPORT_WLCG_TIER1_VO_PROFILES="WLCG_CREAM_LCGCE_CRITICAL ALICE_CRITICAL ATLAS_CRITICAL CMS_CRITICAL LHCb_CRITICAL"
MYWLCG_REPORT_WLCG_TIER2_PROFILES="WLCG_CREAM_LCGCE_CRITICAL"
MYWLCG_TRENDS="True"
MYWLCG_WLCG_TIER1_EMAILS=<TIER1_GROUP_EMAIL_FOR_REPORTS>
MYWLCG_WLCG_TIER2_EMAILS=<TIER2_GROUP_EMAIL_FOR_REPORTS>


# POEM
POEM_ADMIN_NAME="Admin Name"
POEM_ADMIN_EMAIL=<POEM_ADMIN_EMAIL>
POEM_NAMESPACE=<UNIQUE_NAMESPACE> # e.g. ch.cern.sam
POEM_ATP_ROOT_URL="http://localhost"
POEM_SYNC_URLS="http://localhost/poem/api/0.2/json/"

DAEMON_USER=edguser # system account for daemon services
DAEMON_GROUP=edguser # system group for deamon services

# Enable "mywlcg" alias
ENABLE_MYWLCG_ALIAS=1

# Performance Limits
# Limit number of rows that can be fetched at a time to avoid DB dumps.
MYWLCG_DB_LIMIT=50000
# Limit number of accesses per IP address in a given time(seconds).
MYWLCG_ACCESS_PERIOD=5
MYWLCG_NUMBER_OF_ACCESSES=100

