DB_USER_R="LCG_SAM_MRS_NIGHT_7_UP_R"
DB_USER_W="LCG_SAM_MRS_NIGHT_7_UP_W"
# add respective PASS accounts DB_PASS, DB_PASS_R, DB_PASS_W

# Messaging
MSG_BROKER_CACHE_HOST=<BROKER_HOSTNAME>
MS_CONSUMER_NAME=<UNIQUE_CONSUMER_CLIENT_ID # e.g. sam_nightly_val_7_up
N2MS_ROLES_URL="http://localhost/nagios-roles.conf" # this file is from http://gridops.cern.ch/config/nagios-roles.conf should be downloaded to respective location on localhost
N2MS_HOSTS_URL="http://localhost/hep-hosts.conf" # this file restricts from which VO Nagioses we can receive messages (can be empty) - related to msg-consume2db-3.conf

